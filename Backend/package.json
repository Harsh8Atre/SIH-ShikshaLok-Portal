{
  "name": "shiksha_lok",
  "version": "1.0.0",
  "description": "Backend API for ShikshaLok - Smart Learning Platform with real-time monitoring and interactive features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:watch": "nodemon server.js --watch models --watch routes --watch controllers",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "seed": "node scripts/seed.js",
    "seed:dev": "NODE_ENV=development node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "cleanup": "node scripts/cleanup.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "build": "echo 'No build step required for Node.js backend'",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ShikshaLok-backend",
    "pm2:restart": "pm2 restart ShikshaLok-backend",
    "pm2:logs": "pm2 logs ShikshaLok-backend"
  },
  "keywords": [
    "education",
    "e-learning",
    "real-time",
    "monitoring",
    "attendance",
    "polling",
    "nodejs",
    "express",
    "socketio",
    "mongodb"
  ],
  "author": {
    "name": "ShikshaLok Team",
    "email": "team@NavDisha-Shiksha.edu"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "mime-types": "^2.1.35",
    "sanitize-html": "^2.11.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-slow-down": "^1.6.0",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/jest": "^29.5.8",
    "mongodb-memory-server": "^9.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/logs/**",
      "!**/uploads/**",
      "!jest.config.js",
      "!ecosystem.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ShikshaLok-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ShikshaLok-backend/issues"
  },
  "homepage": "https://github.com/your-org/ShikshaLok-backend#readme"
}